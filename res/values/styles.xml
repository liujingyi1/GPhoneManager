<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="Theme.ActionBar" parent="@android:style/Widget.Material.ActionBar.Solid">
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
    </style>
    
    <style name="AppBaseTheme" parent="android:Theme.Material.Light">
        <item name="android:actionBarStyle">@style/Theme.ActionBar</item>
        <item name="android:actionBarSize">@dimen/actionbar_size</item>
        
        <item name="android:windowBackground">@color/window_background_color</item>
        <item name="android:colorPrimaryDark">@color/color_primary_dark</item>
        <item name="android:colorAccent">@color/color_accent</item>
        <item name="android:colorPrimary">@color/color_primary</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>
    <!--
              <item name="android:textColorHint">@color/gold</item>
    <item name="android:colorPrimary">@color/gold</item>
        <item name="android:colorPrimaryDark">@color/gold</item>
        <item name="android:colorAccent">@color/gold</item>
        <item name="android:colorControlNormal">@color/gold</item>
        <item name="android:colorButtonNormal">@color/gold</item> -->

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        
    </style>
    
    <!-- Mian activity theme. -->
    <style name="MainAppTheme" parent="android:Theme.Material.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/window_background_color</item>
    </style>
    
    <style name="DialogTheme" parent="android:style/Theme.DeviceDefault.Light.Dialog.NoActionBar">
    </style>
    
    <style name="TextAppearance.ConfirmDeviceCredentialsErrorText"
        parent="android:TextAppearance.Material.Body1">
        <item name="android:textColor">@color/warning</item>
    </style>
    
    <style name="TextAppearance.PasswordEntry" parent="android:TextAppearance.Material">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#767676</item>
    </style>

    <style name="LockPattern" parent="android:Theme.Material.Settings">
        <!-- LockPatternView colors -->
        <item name="@*android:regularColor">@color/lock_pattern_view_regular_color</item>
        <item name="@*android:successColor">@color/lock_pattern_view_success_color</item>
        <item name="@*android:errorColor">@color/lock_pattern_view_error_color</item>
    </style>
	 <style name="checkbox_choose">
        <item name="android:button">@drawable/checkbox_choosse</item>
    </style>
    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Theme.Dialog</item>
       
    </style>
    
    <style name="popup_anim">
        <item name="android:windowExitAnimation">@drawable/window_out</item>
        <item name="android:windowEnterAnimation">@drawable/window_in</item>
    </style>
    
    <style name="menu_popup_anim">
        <item name="android:windowExitAnimation">@drawable/menu_window_out</item>
        <item name="android:windowEnterAnimation">@drawable/menu_window_in</item>
    </style>
    
    <style name="NetTabTextStyle"
           parent="android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
