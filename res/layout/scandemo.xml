<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <View
            android:id="@+id/view1"
            android:layout_height="4dp"
            android:layout_width="match_parent"
           />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            
            android:layout_margin="2dp"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
             />

        <CheckBox
            android:id="@+id/checkBox"
            style="@style/checkbox_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <ImageView
            android:layout_marginRight="5dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:id="@+id/image_photo"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@+id/view2"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/text_size"
            android:layout_alignTop="@+id/image_photo"
            android:maxLines="1"
            android:text="@string/hello_world"
            android:textColor="@color/white"
            android:textSize="@dimen/the_list_item_texttop" />

        <TextView
            android:id="@+id/text_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text_size"
            android:layout_alignBottom="@+id/text_size"
            android:layout_toRightOf="@+id/text_size"
            android:text="@string/hello_world"
            android:textColor="@color/white"
            android:textSize="@dimen/the_list_item_textbottom" />

        <TextView
            android:id="@+id/text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/checkBox"
            android:layout_toRightOf="@+id/image_photo"
            android:text="@string/hello_world"
            android:textColor="@color/white"
            android:textSize="11dp" />

    </RelativeLayout>

</RelativeLayout>