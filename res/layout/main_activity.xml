<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
  		android:fitsSystemWindows="true"
        android:background="@drawable/main_background" >
        
        <LinearLayout 
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="48dp"
            android:gravity="center_vertical">
            
            <ImageView 
		        android:id="@+id/img_back"
		        android:layout_width="@dimen/actionbar_size"
		        android:layout_height="@dimen/actionbar_size"
		        android:scaleType="center"
		        android:src="@drawable/actionbar_back"
		        android:tint="@android:color/white"
		        android:visibility="gone"
		        android:background="@drawable/img_bg_dark"/>
            
	        <TextView 
	            android:id="@+id/title"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/white"
	            android:layout_marginLeft="28dp"
	            android:text="@string/app_name"
	            android:textSize="21sp"/>
        
        </LinearLayout>

        <com.android.gphonemanager.view.CircleProgressView
            android:id="@+id/ram_percent_view"
			android:padding="8dp"
			android:layout_marginTop="@dimen/circle_progress_padding_top"
			android:layout_centerHorizontal="true"
            android:layout_width="@dimen/circle_progress_size"
            android:layout_height="@dimen/circle_progress_size"
            android:layout_below="@id/title_bar" /> 
			<!-- android:layout_centerInParent="true"-->

        <TextView 
            android:id="@+id/clear_key"
            android:layout_below="@id/ram_percent_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@android:color/white"
            android:text="@string/clear_key"
            android:background="@drawable/clear_key_bg"
            android:gravity="center"
            />
        <TextView 
            android:id="@+id/ram_percent_data"
            android:layout_below="@id/clear_key"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            />
    </RelativeLayout>
   

    <LinearLayout
        android:id="@+id/grid_gallery_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

    </LinearLayout>
    
</LinearLayout>

